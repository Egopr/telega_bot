import telebot
import random
from telebot import types
bot = telebot.TeleBot('5357543510:AAG1dgIeMnL0hmNmPZfccjvjGVtpyq-KSEE')

# –§—É–Ω–∫—Ü–∏—è, –æ–±—Ä–∞–±–∞—Ç—ã–≤–∞—é—â–∞—è –∫–æ–º–∞–Ω–¥—É /start
@bot.message_handler(commands=["start"])
def start(messege):
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    btn1 = types.KeyboardButton("üé∞ –•–û–ß–£ –ò–ì–†–ê–¢–¨")
    btn2 = types.KeyboardButton("üéü –ó–ê–ì–†–£–ó–ò–¢–¨ –ò–ì–†–£")
    markup.add(btn1, btn2)
    bot.send_message(messege.chat.id, '–ó–î–ï–°–¨ –ù–ê–ß–ò–ù–ê–ï–¢–¨–°–Ø –ü–£–¢–¨ –ù–ê–°–¢–†–ê–î–ê–ú–£–°–ê\n–í –≠–¢–û–ô –ò–ì–†–ï –¢–´ –ú–û–ñ–ï–®–¨ –ò–°–ü–´–¢–ê–¢–¨ –°–í–û–ò –°–ò–õ–´', reply_markup=markup)

@bot.message_handler(content_types=['text'])
def func(message):
    if(message.text == "üé∞ –•–û–ß–£ –ò–ì–†–ê–¢–¨"):
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
        btn1 = types.KeyboardButton("–ù–£ –ß–¢–û –ü–û–ì–ù–ê–õ–ò –ù–ê–•**")
        back = types.KeyboardButton("‚¨ÖÔ∏è")
        markup.add(btn1, back)
        bot.send_message(message.chat.id, text="–ü—Ä–∏–≤–µ–µ—Ç.. —è —Ö–æ—á—É –ø–æ–∏–≥—Ä–∞—Ç—å —Å —Ç–æ–±–æ–π –≤ –∏–≥—Ä—É ü§°",reply_markup=markup)
    elif(message.text == "üéü –ó–ê–ì–†–£–ó–ò–¢–¨ –ò–ì–†–£"):
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
        btn1 = types.KeyboardButton("–ë–ª–æ–∫ –ó–∞–≥—Ä—É–∑–∫–∏ ")
        back = types.KeyboardButton("‚¨ÖÔ∏è")
        markup.add(btn1, back)
        bot.send_message(message.chat.id, text="–î–∞–Ω–Ω–æ–µ –±–ª–æ–∫ –Ω–µ —Ä–∞–±–æ—Ç–∞–µ—Ç, –º–æ–∂–Ω–æ –≤–µ—Ä–Ω—É—Ç—å—Å—è –Ω–∞–∑–∞–¥", reply_markup=markup)

    elif (message.text == "‚¨ÖÔ∏è"):
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
        button1 = types.KeyboardButton("üé∞ –•–û–ß–£ –ò–ì–†–ê–¢–¨")
        button2 = types.KeyboardButton("üéü –ó–ê–ì–†–£–ó–ò–¢–¨ –ò–ì–†–£")
        markup.add(button1, button2)
        bot.send_message(message.chat.id, text="–í—ã –≤–µ—Ä–Ω—É–ª–∏—Å—å –≤ –ó–ê–î\n–ú–û–ñ–ï–ú –ü–û–ò–ì–†–ê–¢–¨ ü§°", reply_markup=markup)

    elif (message.text == "–ù–£ –ß–¢–û –ü–û–ì–ù–ê–õ–ò –ù–ê–•**"):
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
        btn1 = types.KeyboardButton("–°–æ—Ö—Ä–∞–Ω–∏—Ç—å üíæ")
        back = types.KeyboardButton("‚¨ÖÔ∏è")
        markup.add(btn1, back)
        bot.send_message(message.chat.id, text="–Ø –∑–∞–≥–∞–¥–∞–ª —á–∏—Å–ª–æ –æ—Ç 1 –¥–æ 100, –ø–æ–ø—Ä–æ–±—É–π —É–≥–∞–¥–∞—Ç—å –µ–≥–æ!!!\n–ù–µ –±–æ–π—Å—è —è –±—É–¥—É –ø–æ–¥—Å–∫–∞–∑—ã–≤–∞—Ç—åüëπ", reply_markup=markup)
        sent = bot.send_message(message.chat.id, '–≤–≤–µ–¥–∏—Ç–µ —á–∏—Å–ª–æ')
        bot.register_next_step_handler(sent, game_mod)

    else:
        bot.send_message(message.chat.id, text="–ù–∞ —Ç–∞–∫—É—é –∫–æ–º–º–∞–Ω–¥—É —è –Ω–µ –∑–∞–ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–ª..")


ran = random.randint(1, 101)
@bot.message_handler(content_types=['text'])
def game_mod(m):
    numb= m.text
    number = int(numb)
    if number > ran:
        bot.send_message(m.chat.id, text="—á–∏—Å–ª–æ –º–µ–Ω—å—à–µ, —á–µ–º –≤—ã –Ω–∞–ø–∏—Å–∞–ª–∏")
        sent = bot.send_message(m.chat.id, '–≤–≤–µ–¥–∏—Ç–µ —á–∏—Å–ª–æ')
        bot.register_next_step_handler(sent, game_mod)
    elif number < ran:
        bot.send_message(m.chat.id, text="—á–∏—Å–ª–æ –±–æ–ª—å—à–µ, —á–µ–º –≤—ã –Ω–∞–ø–∏—Å–∞–ª–∏")
        sent = bot.send_message(m.chat.id, '–≤–≤–µ–¥–∏—Ç–µ —á–∏—Å–ª–æ')
        bot.register_next_step_handler(sent, game_mod)
    elif number == ran:
        sent = bot.send_message(m.chat.id, text="–í—ã –∫—Ä–∞—Å–∞–≤—á–∏–∫ –≤—ã —É–≥–∞–¥–∞–ª–∏ !!!")
        bot.register_next_step_handler(sent, func)


# –ó–∞–ø—É—Å–∫–∞–µ–º –±–æ—Ç–∞
bot.polling(none_stop=True, interval=1)
